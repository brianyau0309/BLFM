#!/bin/sh
# Show information of system
# "dunst" is required

msgId="991049"

volumenum=$(echo $(amixer sget Master | grep 'Mono:' | awk -F"[][]" '{ print $2 }') | sed 's/%//')
vicon=$(amixer sget Master | grep off >/dev/null &&
  echo ðŸ”‡ ||
  ( ([ $volumenum -gt 80 ] && echo ðŸ”Š) ||
    ([ $volumenum -gt 20 ] && echo ðŸ”‰) ||
    echo ðŸ”ˆ )
)

brightness=$(xbacklight -get)

msg="$vicon $volumenum%\nðŸŒž $brightness%"

dunstify -a "System Control" -u low -I "$HOME/Downloads/setting.png" -r "$msgId" "System Control" "$msg"
