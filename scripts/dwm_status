#!/bin/sh

div='|'

printNotification() {
  status=$(cat $HOME/.config/dunst/status)
  [ "$status" = "1" ] && echo ðŸ”” || echo ðŸ”•
}
printStorage() {
  df -h | grep '/dev/sda3' | awk '{ print "ðŸ’½ "$4  }'
  df -h ~ | grep -v 'Filesystem' | awk '{ print $4 }'
}
printDate() {
	date '+ðŸ“… %Y-%m-%d(%a) ðŸ•’ %H:%M'
}
statusBar() {
  printStorage
  printDate
  printNotification
}

while :; do
	xsetroot -name " $( statusBar | tr '\n' ' ')" #Change newline to space
	sleep 30
done
