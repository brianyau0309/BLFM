#!/bin/sh
# Change directory when starting shell
# Need to put a anchor in target file
target="/tmp/.wkon"
last="$HOME/.config/.last_wkon"
case "$1" in
  home)
    rm $target ;;
  last)
    cat $last ;;
  anchor)
    [ -f $target ] && cat $target || echo ;;
  "")
    wkon="$(pwd)"; echo "$wkon" > $target; echo $wkon > "$last" ;;
esac
