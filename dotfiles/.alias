# Basic
alias ls='exa -g --color=auto --group-directories-first'
alias la="ls -a"
alias ll="ls -la"
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias sctl='sudo systemctl'
alias sdn="sudo shutdown -h now"
# pacman
alias p="sudo pacman"
# vim
alias v="vim"
alias sv="sudo vim"
alias vrc="vim ~/.vimrc"
alias vst="cd ~/.vim/after && ls"
# bash
alias brc="vim ~/.bashrc"
alias bpr="vim ~/.bash_profile"
# zsh
alias zrc="vim ~/.zshrc"
alias zpr="vim ~/.zprofile"
alias zal="vim ~/.zalias"
alias zev="vim ~/.zshenv"
# alias
alias al="vim ~/.alias"
# git
alias g="git"
# tmux
alias tmc="vim ~/.tmux.conf"
# xorg
alias xrc="vim ~/.xinitrc"
alias xpr="vim ~/.xprofile"
alias c="xclip -f -selection clipboard | xclip"
# suckless
alias dwc="vim ~/.config/dwm/config.h"
alias stc="vim ~/.config/st/config.h"
alias dmc="vim ~/.config/dmenu/config.h"
# wkon
alias gh="cd && wkon home"
alias gw='wkon last && cd "$(wkon last)" && wkon'
# Folder
alias blfm="cd ~/.config/BLFM && la"
alias ms="cd ~/.config/BLFM/scripts && la"
alias dot="cd ~/.config/BLFM/dotfiles && la"
# python virtualenv manager, z for zsh
alias pvm="source ~/.config/pvm/pvm"
# memo
alias memo="~/.config/memo/memo"
alias mgp="~/.config/memo/mgp"
alias m="memo"
alias ml="memo last"
alias mt="memo last Tags"
alias mtd="memo last $(date '+%d-%m-%Y')"
alias mtr="memo last $(date -d tomorrow '+%d-%m-%Y')"
alias mls="memo list"

