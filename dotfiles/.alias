# Basic
alias ls='exa -g --color=auto --group-directories-first'
alias la="ls -a"
alias ll="ls -l --git"
alias lla="ls -la --git"
alias tree="ls -T"
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias h='history'
alias sctl='sudo systemctl'
alias sdn="sudo shutdown -h now"
alias pt="sudo powertop"
alias ...="../.."
alias ....="../../.."
alias cp="cpg -gv"
alias mv="mvg -gv"
alias rm="rm -v"
# pacman
alias p="sudo pacman"
# vim/neovim
alias v="nvim"
alias vim="nvim"
alias sv="sudo nvim"
alias svi="sudo nvim"
alias svim="sudo nvim"
alias vrc="v ~/.config/nvim/init.vim"
alias vst="cd ~/.vim/after && ls"
# bash
alias brc="v ~/.bashrc"
alias bpr="v ~/.bash_profile"
alias al="v ~/.alias"
# zsh
alias zrc="v ~/.zshrc"
alias zpr="v ~/.zprofile"
alias zal="v ~/.zalias"
alias zev="v ~/.zshenv"
# git
alias g="git"
# tmux
alias tmc="v ~/.tmux.conf"
# xorg
alias xrc="v ~/.xinitrc"
alias xpr="v ~/.xprofile"
alias c="xclip -f -selection clipboard | xclip"
# suckless
alias dwc="v ~/.config/dwm/config.h"
alias stc="v ~/.config/st/config.h"
alias dmc="v ~/.config/dmenu/config.h"
# youtube-dl
alias ytd.m4a="youtube-dl -f bestaudio[ext=m4a] --extract-audio --embed-thumbnail --add-metadata"
alias ytd.ba="youtube-dl -f bestaudio --extract-audio --embed-thumbnail --add-metadata"
# mpv
alias mpv.webcam="mpv av://v4l2:/dev/video0 --profile=low-latency --untimed"
# dragon
alias dra="dragon-drag-and-drop"
# wkon
alias gh="cd && wkon home"
alias gw='wkon last && cd "$(wkon last)" && la && wkon'
# Folder
alias blfm="cd ~/.config/BLFM && la"
alias ms="cd ~/.config/BLFM/scripts && la"
alias dot="cd ~/.config/BLFM/dotfiles && la"
# python virtualenv manager
alias pvm="source ~/.config/pvm/pvm"
# memo
alias memo="~/.config/memo/memo"
alias mgp="~/.config/memo/mgp"
alias mpin="~/.config/memo/mpin"
alias m="memo"
alias ml="memo last"
alias mt="memo last Tags"
alias mtd="memo last $(date '+%d-%m-%Y')"
alias mtr="memo last $(date -d tomorrow '+%d-%m-%Y')"
alias mls="memo list"
